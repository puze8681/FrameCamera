<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraActivity">

    <FrameLayout
        android:id="@+id/frame_camera"
        android:background="#CECECE"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:id="@+id/text_title"
        android:text="네모칸에 맞추어 사진을 찍어주세요"
        android:textColor="#fff"
        android:textSize="19sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/guide_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="665">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="153" />

        <View
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="367"
            android:background="@drawable/square_white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="145" />
    </LinearLayout>

    <ImageView
        android:id="@+id/button_camera_shutter"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:src="@drawable/ic_camera_black_24dp" />

    <ImageView
        android:id="@+id/button_camera_new"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="56dp"
        android:src="@drawable/ic_camera_new"
        android:layout_width="32dp"
        android:layout_height="32dp" />
</RelativeLayout>